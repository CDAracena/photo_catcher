<div class="container">
  <div class="columns photo-Name is-centered">
    <div class="column">
      <%=@photo.title %>
      <span class="taken-by">
        Taken By:
        <%=link_to user_path(@photo.user) do %>
        <%= @photo.user.username%>
      <% end %>
    </span>
  </div>
</div>
<div class="columns is-centered">
  <div class="column">
    <%=image_tag(@photo.image) %>
    <%= @photo.description %>
  </div>
</div>
Other Photos By:<%= link_to user_path(@photo.user) do %><%=@photo.user.username %>
<% end %>
<div class="columns is-centered">
<% @recent_photos.each do |recent_photo| %>
  <div class='column is-half'>
    <%= link_to photo_path(recent_photo) do %>
    <%=image_tag(recent_photo.image) %>
  <% end %>
</div>
<% end %>
</div>
</div>
