<div class="container">
  <div class="columns photo-Name is-centered zero-margin">
    <div class="column">
      <%=@photo.title %>
      <span class="taken-by">
        Taken By:
        <%=link_to user_path(@photo.user) do %>
        <%= @photo.user.username%>
      <% end %>
    </span>
  </div>
</div>
<div class="columns is-centered zero-margin">
  <div class="column">
    <%=image_tag(@photo.image) %>
    <%= @photo.description %>
  </div>
</div>
<span class="users-other-photos">Other Photos By:<%= link_to user_path(@photo.user) do %><%=@photo.user.username %></span>
<% end %>
<% if @user_photos.count > 2 %>
<div class="columns is-centered zero-margin">
  <% @recent_photos.each do |recent_photo| %>
    <div class='column is-half'>
      <%= link_to photo_path(recent_photo) do %>
      <%=image_tag(recent_photo.image, class:'recent-photo') %>
    <% end %>
  </div>
<% end %>
</div>
<% end %>
</div>
