<div class="container">
  <div class="columns is-multiline zero-margin">
    <% @photos.each do |photo| %>
      <div class="column is-one-third">
        <%= link_to photo_path(photo) do %>
        <%=image_tag(photo.image, class:'gallery-image') %>
      <% end %>
      <%= photo.title %>
      <span class="taken-by">Taken By:
        <%=link_to user_path(photo.user) do %><%=photo.user.username%>
      <% end %>
    </span>
  </div>
<% end %>
</div>
</div>
