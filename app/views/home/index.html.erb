<div class="container">
  <% if user_signed_in? %>
    <div class="columns zero-margin">
      <div class="column">
        Most Recent Uploads
      </div>
    </div>
    <div class="columns recentUploadsRow zero-margin">
      <% @photos.each do |photo| %>
        <div class="column is-one-quarter">
          <%= link_to photo_path(photo) do %>
          <%= image_tag(photo.image, class:'photo')%>
        <% end %>
        Photo Taken By:
        <%= link_to user_path(photo.user) do %><%=photo.user.username %>
      <% end %>
    </div>
  <% end %>
</div>
<div class="columns zero-margin">
  <div class="column">
    Newest Members
  </div>
</div>
<div class="columns has-text-centered recentUploadsRow zero-margin">
  <% @users.each do |user| %>
    <div class="column is-one-third">
      <%= user.username %>
      <% if user.avatar.attached? %>
        <%= link_to user_path(user) do %>
        <div><%= image_tag(user.avatar, class:'user-avatar-img') %></div>
      <% end %>
    <% end %>
  </div>
<% end %>
</div>
</div>

<% else %>
<div class="container newUserIntroContainer is-size-4">
<div class="columns has-text-centered is-centered">
<div class="column is-one-quarter is-size-1">
  <%= fa_icon 'camera-retro' %>
</div>
</div>
<div class="columns has-text-left sign-up-row">
<div class="column">Sign Up Now! Share your photos with the world!</div>
</div>
<div class="columns has-text-right">
<div class="column">
  Join the best online gallery community today!
</div>
</div>
<div class="columns">
<div class="column has-text-centered is-quarter">
  <%= link_to 'Create An Account!', new_user_registration_path %>
</div>
<div class="column has-text-centered is-quarter">
  <span class="have-account"> Already Have An Account? </span>
  <%= link_to 'Sign In!', new_user_session_path, class:'sign-in-intro' %>
</div>
</div>
<% end %>
</div>
