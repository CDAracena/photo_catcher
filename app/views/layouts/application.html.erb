<!DOCTYPE html>
<html>
  <head>
    <title>PhotoCatcher</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <%=image_tag image_path('photo_catcher_icon.png'), class:'navLogo' %>
          <span class="navbarTitle">Photo Catcher</span>
        </a>
        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item">
            <%=link_to 'Sign In', new_user_session_path, class:'sign-in-link' %>
            <%=fa_icon "sign-in-alt", class:'sign-in-link'%>
          </a>

        </div>
        <div class="navbar-end">
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
