<div class="container">
  <div class="columns is-centered has-text-centered">
    <div class="column">
      <h1>Hello
        <%=current_user.username %></h1>
    </div>
  </div>
  <div class="columns">
    <div class="column is-one-fifth has-text-centered">
      <%= image_tag(current_user.avatar)%>
      <p class="user-full-name">
        <%=current_user.f_name %>
        <%=current_user.l_name %><br>
        <%=current_user.email %><br>
        No. of Photos
      </p>
      <p class="about-user"><%= current_user.about %></p>
      <div>
        <i class="fab fa-facebook"></i>
        <i class="fab fa-instagram"></i>
        <i class="fab fa-twitter"></i>
      </div>
    </div>
    <div class="column photoContainer">
      <div class="columns topNav">
        <div class="column topNavCol">
          <span>
            Gallery
          </span>
          <span><%=link_to 'Add New Photo', new_photo_path, class:'addPhotoLink' %></span>
        </div>
      </div>
    </div>
  </div>
</div>
